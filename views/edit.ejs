<%- include('partials/header') %>

<div class="ui main text container segment">
  <div class="ui huge header">
    Edit: <%= blog.title %>
  </div>
  <!-- method="PUT" will not work because HTML doesn't support it. So you have to install Method-Override and then append ?_method=PUT to action and use method="POST" -->
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%= blog.title %>">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" value="<%= blog.image %>">
    </div>
    <div class=" field">
      <label>Body</label>
      <textarea name="blog[body]"><%= blog.body %></textarea>
    </div>
    <input class=" ui violet big basic button" type="submit">
  </form>
  <div>
    <p><a href="../<%= blog._id %>">Back</a></p>
  </div>
</div>



<%- include('partials/footer') %>